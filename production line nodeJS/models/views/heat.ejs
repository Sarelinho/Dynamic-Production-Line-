<%- include ("header.ejs") %>
<style>
     body {
        direction: rtl;
      font-family: Arial, sans-serif;
      background-color: #000;
      color: #fff;
      margin: 0;
      padding: 0;
      text-align: center;
     }
    
    main {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
    }
    

    #addform {
      background-color: rgba(255, 255, 255, 0.05);
      padding: 20px;
      border-radius: 5px;
      box-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
      width: 300px;
    }
    
    label {
      display: block;
      margin-bottom: 10px;
      font-weight: bold;
      color:  #E0B589;

    }
    
    input[type="text"] {
      width: 100%;
      padding: 5px;
      background-color: rgba(255, 255, 255, 0.1);
      border: none;
      border-radius: 3px;
;
    }
    
    button {
      display:flexbox;
      margin-top: 20px;
      padding: 10px 20px;
      background-color: #9B2335;
      color: #fff;
      border: none;
      border-radius: 3px;
      cursor: pointer;
            align-items: center;

    }
    
    button:hover {
      background-color:#D2386C;
    }
  </style>
    <main>
        <hi >Sarel's production line</hi>
        <div id="addform">
                <form action="" method="post">
                    <label for="heatTime">הכנס זמן חימום:</label>
                    <input type="text" name="heatTime" id="heatTime" value="<%= item.heatTime %>" />
                    <br>
                    <label for="testLight">הכנס זמן בדיקת אור</label>
                    <input type="text" name="testLight" id="testLight" value="<%= item.testLight %>" />
                    <br>
                    <label for="setupTime">הכנס זמן הפעלת מכשיר :</label>
                    <input type="text" name="setupTime" id="setupTime" value="<%= item.setupTime %>" />
                    <br>
                    <label for="delayTime">הכנס זמן השהייה:</label>
                    <input type="text" name="delayTime" id="delayTime" value="<%= item.delayTime %>" />
                    <br>
                    <button>save</button>

                </form>
            </div>
    
    </main>
    

